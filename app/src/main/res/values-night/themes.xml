<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme -->
    <style name="Theme.FitTrack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        
        <!-- Customize dark theme here -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/black</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        
        <!-- Card colors -->
        <item name="cardBackgroundColor">@color/dark_surface</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.FitTrack.Dark.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.FitTrack.Dark.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.FitTrack.Dark.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.FitTrack.Dark.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.FitTrack.Dark.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.FitTrack.Dark.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.FitTrack.Dark.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.FitTrack.Dark.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.FitTrack.Dark.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.FitTrack.Dark.Body2</item>
    </style>

    <!-- Dark Text Appearances -->
    <style name="TextAppearance.FitTrack.Dark.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.FitTrack.Dark.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.FitTrack.Dark.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.FitTrack.Dark.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.FitTrack.Dark.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.FitTrack.Dark.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.FitTrack.Dark.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_text_secondary</item>
    </style>

    <style name="TextAppearance.FitTrack.Dark.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_text_secondary</item>
    </style>

    <style name="TextAppearance.FitTrack.Dark.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.FitTrack.Dark.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_text_secondary</item>
    </style>
</resources>